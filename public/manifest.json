{
  "manifest_version": 3,
  "name": "Pipe",
  "author": "Null ref",
  "description": "Open multiple devices screens for test or debug a website across devices.",
  "version": "1.0",
  "action": {},
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["*.css", "*.js"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "webNavigation",
    "storage",
    "scripting"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["https://*/*", "http://*/*"]
}
